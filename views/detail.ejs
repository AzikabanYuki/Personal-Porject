<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <style>
        .VolunteerPage {
            font-weight: normal;
            font-size: medium;
            margin-top: 0.4rem;
        }

        .badge {
            margin-top: 1rem;
        }
    </style>

</head>

<body>
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link  active" href="/event">Events</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/become/volunteer">Become volunteer</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col-6 ms-5">
                <span class="badge text-bg-light">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item VolunteerPage"><a href="/" style="text-decoration: none">Home</a></li>
                            <li class="breadcrumb-item VolunteerPage"><a href="/event" style="text-decoration: none">Events</a></li>
                            <li class="breadcrumb-item VolunteerPage active" aria-current="page">Event title</li>
                        </ol>
                    </nav>
                </span>
        </div>
    </div>
    <div class="row">
        <div class="col-6 ms-5">
            <div class="card col-12 my-4" style="height: 30rem;">
                <div class="card-body ">
                    <h5 class="card-title" id="event_title">Card title</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary" id="organizer">Card subtitle</h6>
                    <p class="card-text" id="description">Some quick example text to build on the card title and
                        make up
                        the bulk of the
                        card's content.</p>
                    <div class="card">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item" id="datetime">An 1111</li>
                            <li class="list-group-item" id="location">A second item</li>
                            <li class="list-group-item" id="quota">A third item</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-5">
            <div class="card my-4" style="width: 35rem;height: 30rem;">
                <img src="https://picsum.photos/1920/1080" class="card-img-top" id="image" style="height: 23rem;"
                     alt="">
                <div class="card-body">
                    <h5 class="card-title"><strong>Become a volunteer!</strong></h5>
                    <p class="card-text">You time and talent can make a real different in people's life.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {

        document.getElementById("event_title").innerHTML = "<%= information.Title %>";
        document.getElementById("organizer").innerHTML = "<%= information.Organizer %>";
        <% if (information.Description === "") { %>
        document.getElementById("description").innerHTML = "No Description";
        <% } else { %>
        document.getElementById("description").innerHTML = "<%= information.Description %>";
        <% } %>
        document.getElementById("datetime").innerHTML = "Datetime: <%= information.Datetime %>";
        document.getElementById("location").innerHTML = "Location: <%= information.Location %>";
        document.getElementById("quota").innerHTML = "Quota: <%= information.Quota %>";
        <% if (information.Image === "") { %>
        document.getElementById("image").src = "https://t4.ftcdn.net/jpg/04/73/25/49/360_F_473254957_bxG9yf4ly7OBO5I0O5KABlN930GwaMQz.jpg";
        <% } else { %>
        document.getElementById("image").src = "<%= information.Image %>";
        <% } %>

    });
</script>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"></script>
</body>
<script>
    document.getElementById("Regist").onsubmit = function (event) {
        let checkbox = document.getElementById("agree");
        if (!checkbox.checked) {
            alert("Please agree to the terms and conditions.");
            event.preventDefault(); // Prevent form submission
        }
    };
</script>